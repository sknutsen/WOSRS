<label>
    <input type="checkbox" @bind="Value" />
    @Text
</label>

@code {
    [Parameter]
    public bool Checked { get; set; }

    [Parameter]
    public EventCallback<bool> CheckedChanged { get; set; }

    private bool Value
    {
        get => Checked;
        set => CheckedChanged.InvokeAsync(value);
    }

    [Parameter]
    public string Text { get; set; }

}
